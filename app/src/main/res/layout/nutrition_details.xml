<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp">
    <TextView
        android:id="@+id/nutrition_details_page_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Repères nutritionnels pour 100g"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <View
        android:id="@+id/shape_one"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circle"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/nutrition_details_page_name"
        app:layout_constraintStart_toStartOf="@id/nutrition_details_page_name"
        app:layout_constraintRight_toLeftOf="@id/nutrition_fat"
        />
    <TextView
        android:id="@+id/nutrition_fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/shape_one"
        app:layout_constraintTop_toBottomOf="@id/nutrition_details_page_name"
        android:text="0,8g de Matières grasses / Lipides"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/nutrition_fat_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/nutrition_fat"
        app:layout_constraintLeft_toLeftOf="@id/nutrition_fat"
        android:text="en faible quantité"
        android:textSize="15sp"
        />
    <View
        android:id="@+id/shape_two"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circle"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/nutrition_fat_quantity"
        app:layout_constraintRight_toLeftOf="@id/nutrition_saturated_fat"
        />
    <TextView
        android:id="@+id/nutrition_saturated_fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/nutrition_fat_quantity"
        app:layout_constraintLeft_toLeftOf="@id/nutrition_fat_quantity"
        android:text="0,1 g d'acides gras saturés"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/nutrition_saturated_fat_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/nutrition_saturated_fat"
        app:layout_constraintLeft_toLeftOf="@id/nutrition_saturated_fat"
        android:text="en faible quantité"
        android:textSize="15sp"
        />
    <View
        android:id="@+id/shape_three"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circle"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/nutrition_saturated_fat_quantity"
        app:layout_constraintRight_toLeftOf="@id/nutrition_sugar"
        />
    <TextView
        android:id="@+id/nutrition_sugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/nutrition_saturated_fat_quantity"
        app:layout_constraintLeft_toLeftOf="@id/nutrition_saturated_fat_quantity"
        android:text="5,2 g de sucres"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/nutrition_sugar_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/nutrition_sugar"
        app:layout_constraintLeft_toLeftOf="@id/nutrition_sugar"
        android:text="en quantité modérée"
        android:textSize="15sp"
        />
    <View
        android:id="@+id/shape_four"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circle"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/nutrition_sugar_quantity"
        app:layout_constraintRight_toLeftOf="@id/nutrition_salt"
        />
    <TextView
        android:id="@+id/nutrition_salt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/nutrition_sugar_quantity"
        app:layout_constraintLeft_toLeftOf="@id/nutrition_sugar_quantity"
        android:text="0,75 g Sel"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/nutrition_salt_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/nutrition_salt"
        app:layout_constraintLeft_toLeftOf="@id/nutrition_salt"
        android:text="en quantité modérée"
        android:textSize="15sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>