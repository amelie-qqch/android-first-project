<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recipe_name_peas"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/brand_name"
                    android:textStyle="bold|italic"
                    android:textSize="15sp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="78dp"
                android:layout_height="42dp"
                android:src="@drawable/nutri_score_a"
                android:layout_weight="0.1"
                />
        </LinearLayout>

        <Space
            android:layout_width="1dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Code barres: 3083680085304"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Quantité: 400g (280g net égoutté)"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Vendu en: France, Japon, Suisse"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ingrédients: Petits pois 66%, eau, garniture 2,8% (salade, oignons grelot), sucre ..."

            android:textStyle="bold"
            android:textSize="15sp"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Substances allergènes: Aucune"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Additifs: Aucun"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="100sp"/>
    </LinearLayout>
</LinearLayout>